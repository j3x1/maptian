{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}


<main class="mainContent" role="main">
  <header class="pageHeader">
    {{navigation}}
    <div class="vline"></div>
  </header>
  <article class="post {{post_class}}">
    <section class="post-meta">
      <span class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</span>
    </section>
    <h1 class="postTitle" itemprop="headline">{{title}}</h1>
    <div class="postTags">
      {{tags}}
    </div>
    <div class="authorContainer">
      {{#primary_author}}
      {{#if profile_image}}
      <img alt='{{name}}' src='{{img_url profile_image}}'>
      {{/if}}
      <div class="nameContainer">by <span class="name"><a href="{{url}}" title="{{name}}" rel="author">{{name}}</a></span></div>
      <div class="time">a <span class="eta"></span> read</div>
      <div class="vline"></div>
      <hr/>
      {{/primary_author}}
    </div>
    
    
    <div class="postCover" style="background-image:url('{{img_url feature_image}}')"></div>
    <section class="post-content postContent">
      {{content}}
    </section>
    
    {{#next_post}}
    <section class="recentPost">
      <p>Check the next post: <a href="{{url}}" rel="bookmark" title="{{title}}">{{title}}</a> Â»</p>
    </section>
    {{/next_post}}
    
    <div class="postShare-wrap">
      <div class="postSharing">
        <span>Share on:</span>
        <a class="postShare fb" title="{{{title}}}" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><i class="icon fa fa-facebook"></i></a>
        <a class="postShare   twitter" title="{{{title}}}" target="_blank" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="icon fa fa-twitter"></i></a>
      </div>
    </div>
    
  </article>
  {{#primary_author}}
  <section class="authorWrap">
    <div class="authorInner">
      {{#if profile_image}}
      <img alt='{{name}}' src='{{img_url profile_image}}'>
      {{/if}}
    </div>
    <div class="authorDesc">
      <img alt='{{name}}' src='{{img_url profile_image}}'>
      <h4 class="author"><a href="{{url}}" title="{{name}}" rel="author">{{name}}</a></h4>
      {{#if bio}}
      <p class="authorInfo">{{bio}}
        {{#if website}}<span> Say hey: <a href="{{website}}">{{website}}</a></span>{{/if}}
      </p>
      {{/if}}
    </div>
  </section>
  {{/primary_author}}
  
