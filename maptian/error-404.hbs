{{!< default}}

<main class="mainContent" role="main">
  <header class="pageHeader">
    {{navigation}}
    <div class="vline"></div>
  </header>

  <article class="post error-404">
    <section class="post-content postContent">
      <h1>404 - Page Not Found</h1>
      <script>
        // Get the current path const currentPath = window.location.pathname; if
        (currentPath.includes('/tag/')) { const topicPath =
        currentPath.replace('/tag/', '/blog/topic/'); document.write(` <p>Tags
        are now called topics.</p> <p>Redirecting you to the new location...</p>
        <p>If you're not redirected, <a href="${topicPath}">click here</a></p>
        `); } else if (!currentPath.includes('/blog')) { document.write(`
        <p>This might be because you've followed an old link or typed in a wrong
        URL.</p> <p>Attempting to redirect you to the blog...</p> <p>If you're
        not redirected, <a href="/blog${currentPath}">click here</a></p> `); }
        else { document.write(` <p>This page doesn't exist in the blog.</p>
        <p>You can return to the <a href="/blog">blog homepage</a>.</p> `); }
      </script>
      <noscript>
        <p>This page doesn't exist.</p>
        <p>You can return to the <a href="/blog">blog homepage</a>.</p>
      </noscript>
    </section>
  </article>
</main>

<script>
  const currentPath = window.location.pathname; if
  (currentPath.includes('/tag/')) { // Redirect /tag/* to /blog/topic/* const
  newPath = currentPath.replace('/tag/', '/blog/topic/'); setTimeout(() => {
  window.location.href = newPath; }, 1500); } else if
  (!currentPath.includes('/blog')) { // Redirect to /blog/* const newPath =
  '/blog' + (currentPath.startsWith('/') ? currentPath : '/' + currentPath);
  setTimeout(() => { window.location.href = newPath; }, 1500); }
</script>

<style>
  .error-404 { text-align: center; padding: 50px 20px; } .error-404 h1 {
  font-size: 2em; margin-bottom: 20px; } .error-404 p { font-size: 1.2em;
  margin: 10px 0; }
</style>
